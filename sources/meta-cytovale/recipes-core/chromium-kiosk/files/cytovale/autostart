@sed -i 's/"exited_cleanly": false/"exited_cleanly": true/' ~/.config/chromium/Default/Preferences

@chromium -use-gl=egl --no-sandbox --kiosk --disable-gpu --disable-pinch --incognito --noerrdialogs --no-first-run --disable-infobars --overscroll-history-navigation=0s --app=http://127.0.0.1:8000
